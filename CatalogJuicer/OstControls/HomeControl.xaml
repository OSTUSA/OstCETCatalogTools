<UserControl x:Class="OstCatalogJuicer.OstControls.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OstCatalogJuicer.OstControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Top File" Margin="8" HorizontalAlignment="Left"></Label>
                <TextBox Name="DbTextBox" Opacity=".7" Height="20" IsReadOnly="True" Width="300" Margin="8" HorizontalAlignment="Center"></TextBox>
                <Button Content="Select" Margin="8" Padding="8,0" HorizontalAlignment="Right"></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
